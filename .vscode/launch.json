{
        "version": "0.2.0",
        "configurations": [
          {
              "type": "node",
              "request": "launch",
              "name": "Launch via NPM",
              "runtimeExecutable": "npm",
              "runtimeArgs": [
                  "start"
              ],
              "port": 5858
          },
            {
                "name": "Current TS File",
                "type": "node",
                "request": "launch",
                "args": ["${relativeFile}"],
                "runtimeArgs": ["-r", "ts-node/register"],
                "cwd": "${workspaceRoot}",
                "protocol": "inspector",
                "internalConsoleOptions": "openOnSessionStart"
            }
        ]
    }